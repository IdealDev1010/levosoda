<article class="{{ class }}" x-data="{isOpen: false}">
  <!-- ITEM HEAD -->
  <button
    @click="isOpen = !isOpen"
    type="button"
    class="no-select group flex w-full items-center justify-between text-left"
    aria-controls="content-{{ index }}"
  >
    <span
      class="font-secondary group-hover:text-sc-link-primary-text-default lg:text-body-lg text-base font-bold duration-200 ease-in-out"
      :class="isOpen ? 'text-sc-link-primary-text-default' : 'text-sc-title'"
    >
      {{ question }}
    </span>
    {% render 'icon',
      name: 'faq-chevron',
      class: 'ml-2 md:ml-5 duration-300 ease-in-out shrink-0 group-hover:text-sc-link-primary-text-default'
    %}
  </button>

  <!-- ITEM CONTENT -->
  <div
    x-cloak
    x-collapse
    x-show="isOpen"
    :aria-hidden="!isOpen"
    id="content-{{ index }}"
  >
    <div class="smD:pt-3 pt-2 md:pt-4">
      <div class="rte font-secondary text-sc-body-primary child-ul:list-image-star text-base">{{ answer }}</div>
    </div>
  </div>
</article>
